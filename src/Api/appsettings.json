{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/brewery-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "OpenBreweryDb": {
    "BaseUrl": "https://api.openbrewerydb.org/v1/breweries",
    "TimeoutSeconds": 30,
    "MaxRetries": 3
  },
  "Cache": {
    "ExpirationMinutes": 10,
    "DatabaseSyncHours": 24
  },
  "Jwt": {
    "SecretKey": "BoldareBrewery-Super-Secret-Key-For-JWT-Tokens-256-Bits",
    "Issuer": "BoldareBrewery",
    "Audience": "BoldareBrewery-Client",
    "ExpirationMinutes": 60
  }
}
